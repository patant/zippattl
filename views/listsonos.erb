<div class="row">
    <div class="span10">
        <h2>Available Sonos devices</h2>
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                <th>Name</th>
                <th>Model</th>
                <th>Uid</th>
                </tr>
            </thead>
            <tbody>
            <% @speakers.each do |s| %>
                <tr>
                    <td><%= s.name %></td>
                    <td><%= s.model_number %></td>
                    <td><%= s.uid %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>
